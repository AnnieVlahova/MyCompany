@model Customer
@{
}
<div class="my-2" asp-action="Details">
    <p>Details for @Model.Name</p>
    <form>
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <div type="text" class="form-control" id="name" readonly>@Model.Name</div>
        </div>
        <div class="mb-3">
            <label for="director" class="form-label">Director</label>
            <div type="text" class="form-control" id="name" readonly>@Model.Director</div>
        </div>
        <div class="mb-3">
            <label for="city" class="form-label">City</label>
            <div type="text" class="form-control" id="city" readonly>@Model.City</div>
        </div>
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <div type="text" class="form-control" id="country" readonly>@Model.Country</div>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <div type="text" class="form-control" id="email" readonly>@Model.Email</div>
        </div>
        <div class="mb-3">
            <label for="customerCode" class="form-label">Customer Code</label>
            <div type="text" class="form-control" id="name" readonly>@Model.CustomerCode</div>
        </div>
        <div class="mb-3">
            <label for="customerCountryCode" class="form-label">CUstomer Country Code</label>
            <div type="text" class="form-control" id="name" readonly>@Model.CustomerCountryCode</div>
        </div>
        <div class="form-group">
            @*@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            }*@
            <a href="/Customer/Index" class="btn btn-outline-secondary">Show All</a>
        </div>
    </form>
</div>