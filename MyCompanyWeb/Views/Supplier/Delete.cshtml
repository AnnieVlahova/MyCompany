@model Supplier
@{
}
<h1>Are you sure you want to delete this item?</h1>
<div class="my-2" asp-action="Delete">
    <p>Details for @Model.Name</p>
    <form>
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <div type="text" class="form-control" id="name" readonly>@Model.Name</div>
        </div>
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <div type="text" class="form-control" id="country" readonly>@Model.Country</div>
        </div>
        <div class="mb-3">
            <label for="city" class="form-label">City</label>
            <div type="text" class="form-control" id="city" readonly>@Model.City</div>
        </div>
        <div class="mb-3">
            <label for="country" class="form-label">Address</label>
            <div type="text" class="form-control" id="address" readonly>@Model.Address</div>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <div type="text" class="form-control" id="email" readonly>@Model.Email</div>
        </div>
    </form>
</div>
<div class="form-group">
        <form action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a href="/Supplier/Index" class="btn btn-secondary">Cancel</a>
        </form>
     </div>